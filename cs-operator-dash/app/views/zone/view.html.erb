<div class="navbar">
  <div class="navbar-inner">
    <ul class="breadcrumb">
      <li>
      <a href="/">Dashboard</a> <span class="divider">/</span>  
      </li>
      <li>
      <a href="/zones/index">Zones</a> <span class="divider">/</span> 
      </li>
      <li class="active">Zone Detail</li>
    </ul>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <div class="block">
      <div class="navbar navbar-inner block-header">
        <div class="muted pull-left">Zone Details</div>
      </div>
      <div class="block-content collapse in">
        <table id="events" class="table table-striped">
          <thead>
            <tr>
              <th>Field</th>
              <th>Content</th>
            </tr>
          </thead>
          <tbody>
            <% @zone["zone"][@zoneindex].each do |key, value| %>
              <% if key != "capacity" %>
                <tr>
                  <td><%= key %></td>
                  <td><%= value %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="span6">
    <div class="block">
      <div class="navbar navbar-inner block-header">
        <div class="muted pull-left">Current Capacity</div>
        <div class="muted pull-right">
          Last Updated: <%= @lastupdate %>
        </div>
      </div>
      <div class="block-content collapse in">
        <div class="row-fluid">
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_MEMORY }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">Memory</span>
            </div>
          </div>
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_CPU }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">CPU</span>
            </div>
          </div>
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_STORAGE }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">Storage</span>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_STORAGE_ALLOCATED }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">Storage Allocated</span>
            </div>
          </div>
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_VIRTUAL_NETWORK_PUBLIC_IP }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">Public IPs</span>
            </div>
          </div>
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_PRIVATE_IP }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">Private IPs</span>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_SECONDARY_STORAGE }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">Secondary Storage</span>
            </div>
          </div>
          <div class="span3">
            <%= easy_as_pie (@zone["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_VLAN }["percentused"]) %>
            <div class="chart-bottom-heading">
              <span class="label label-info">VLANs</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<a name="memory" />
  <div class="row-fluid section">
    <div class="block">
      <div class="navbar navbar-inner block-header">
        <div class="muted pull-left">Memory</div>
      </div>
      <div class="block-content collapse in">
        <div class="span12">
          <div id="memory-graph" style="height: 230px;"></div>
        </div>
      </div>
    </div>
  </div>
  <a name="cpu" />
    <div class="row-fluid section">
      <div class="block">
        <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">CPU</div>
        </div>
        <div class="block-content collapse in">
          <div class="span12">
            <div id="cpu-graph" style="height: 230px;"></div>
          </div>
      </div></div>
    </div>
    <a name="storage" />
      <div class="row-fluid section">
        <div class="block">
          <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Storage</div>
          </div>
          <div class="block-content collapse in">
            <div class="span12">
              <div id="storage-graph" style="height: 230px;"></div>
            </div>
        </div></div>
      </div>
      <script language="javascript">
        $(document).ready(function() {
          $('.chart').easyPieChart({
            size:100
          });
        });

        // Morris Line Chart
        var zone_data = [
        <% @zonehistory.each do |history| %>
          {
            "period": "<%= DateTime.parse(history["collected_time"]).strftime('%Y-%m-%d %H:%M:%S') %>",
            "memory_total": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_MEMORY }["capacitytotal"] %>,
            "cpu_total": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_CPU }["capacitytotal"] %>,
            "storage_total": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_STORAGE }["capacitytotal"] %>,
            "memory_used": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_MEMORY }["capacityused"] %>,
            "cpu_used": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_CPU }["capacityused"] %>,
            "storage_used": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_STORAGE }["capacityused"] %>,
            "memory_percent": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_MEMORY }["percentused"] %>,
            "cpu_percent": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_CPU }["percentused"] %>,
            "storage_percent": <%= history["zone"][@zoneindex]["capacity"].detect {|c| c["type"] == @CAPACITY_TYPE_STORAGE }["percentused"] %>
          },
        <% end %>
        ];
        Morris.Line({
          element: 'memory-graph',
          data: zone_data,
          xkey: 'period',
          xLabels: "collected",
          ykeys: ['memory_total', 'memory_used'],
          labels: ['Total Memory', 'Used Memory']
        });
        Morris.Line({
          element: 'cpu-graph',
          data: zone_data,
          xkey: 'period',
          xLabels: "collected",
          ykeys: ['cpu_total', 'cpu_used'],
          labels: ['Total CPU', 'Used CPU']
        });
        Morris.Line({
          element: 'storage-graph',
          data: zone_data,
          xkey: 'period',
          xLabels: "collected",
          ykeys: ['storage_total', 'storage_used'],
          labels: ['Total Storage', 'Used Storage']
        });

      </script>
